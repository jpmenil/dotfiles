[user]
    email = jpmenil@gmail.com
    name = Jean-Philippe Menil
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = blue bold
    new  = green bold
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[alias]
    st = status
    cm = commit
    br = branch
    co = checkout
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --color --graph --pretty=format:'%C(yellow)%h%Creset -%Cgreen%d%Creset %s %C(cyan)(%ar)%Creset' --abbrev-commit
    df = diff
    wdiff = diff --word-diff=color
[core]
    abbrev = 12
[pretty]
    fixes = Fixes: %h (\"%s\")
[sendemail]
    ; setup for using git send-email; prompts for password
    smtpuser = jpmenil@gmail.com
    smtpserver = smtp.googlemail.com
    smtpencryption = tls
    smtpserverport = 587
    chainreplyto = false
[include]
  path = ~/.config/git/config
